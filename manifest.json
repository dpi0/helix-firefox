{
  "manifest_version": 2,
  "name": "Utility Tools",
  "version": "1.0",
  "description": "A collection of small utility tasks.",
  "permissions": ["activeTab", "clipboardWrite", "tabs"],
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "copy-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Copy the current page's URL to the clipboard"
    },
    "switch-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Switch to the previously active tab"
    }
  },
  "icons": {
    "48": "icons/icon.png"
  }
}
